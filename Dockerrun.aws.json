{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "cengo/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 64
        },
        {
            "name": "server",
            "image": "cengo/multi-server", 
            "hostname": "api",
            "essential":false,
            "memory": 64
        }, 
        {
            "name": "worker",
            "image": "cengo/multi-worker",
            "hostname": "worker",
            "essential": false.
            "memory": 64
        },
        {
            "name": "nginx",
            "image": "cengo/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 64,
        }
        
    ]
}